@model Escolar32.Models.Despesa

<h1>Cadastro Despesa</h1>

<hr />
<div class="row" style="margin-left: 50px;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DespesaNome" class="control-label"></label>
                <input asp-for="DespesaNome" class="form-control" />
                <span asp-validation-for="DespesaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDespesa" class="control-label"></label>
                <input asp-for="ValorDespesa" class="form-control"
                       oninput="window.formatDecimalInput(this)"
                       onblur="window.formatOnBlur(this)" />
                <span asp-validation-for="ValorDespesa" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="DataDespesa" class="control-label"></label>
                <input asp-for="DataDespesa" class="form-control" />
                <span asp-validation-for="DataDespesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DespesaDetalhe" class="control-label"></label>
                <input asp-for="DespesaDetalhe" class="form-control" />
                <span asp-validation-for="DespesaDetalhe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Admin" asp-controller="Despesas" asp-action="Despesas">Voltar</a>
</div>

