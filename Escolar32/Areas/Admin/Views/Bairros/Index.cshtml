@model IEnumerable<Escolar32.Models.Bairro>

<div class="container">

    <div class="row">

        <h1>Lista de Bairros</h1>

        <div>
            <strong>Cadastrar Bairro</strong>
            <a class="fa-solid fa-file-circle-plus green-icon" asp-action="Create"></a>            
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BairroNome)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @{
                    var orderedModel = Model.OrderBy(item => item.BairroNome, StringComparer.CurrentCultureIgnoreCase);
                    var rowClass = "even-row";
                    
                    foreach (var item in orderedModel)
                    {
                        <tr class="@rowClass">
                    <td>
                        @Html.DisplayFor(modelItem => item.BairroNome)
                    </td>
                    <td>
                            <a class="fa-solid fa-trash-can red-icon" asp-action="Delete" asp-route-id="@item.BairroId"></a>
                    </td>
                    </tr>
                            rowClass = (rowClass == "even-row") ? "odd-row" : "even-row";
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
