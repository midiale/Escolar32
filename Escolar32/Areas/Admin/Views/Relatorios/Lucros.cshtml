@model Escolar32.Areas.Admin.ViewModels.LucroViewModel

<div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>        
                    <th></th>
                    <th>Jan</th>
                    <th>Fev</th>
                    <th>Mar</th>
                    <th>Abr</th>
                    <th>Mai</th>
                    <th>Jun</th>
                    <th>Jul</th>
                    <th>Ago</th>
                    <th>Set</th>
                    <th>Out</th>
                    <th>Nov</th>
                    <th>Dez</th>
                    <th>Total Ano</th>
                </tr>
            </thead>
            <tbody>
                @{var rowClass = "even-row";

                    <tr class="@rowClass">
                        <th>Pagamentos</th>
                        @foreach (var total in Model.TotalMeses)
                        {
                            <td>@total</td>
                        }
                        <td>@Model.TotalMeses.Sum()</td>
                    </tr>
                    <tr>
                        <th>Receitas Extras</th>
                        @foreach (var total in Model.TotalReceitas)
                        {
                            <td>@total</td>
                        }
                        <td>@Model.TotalReceitas.Sum()</td>
                    </tr>
                    <tr class="@rowClass">
                        <th class="red-icon">Despesas</th>
                        @foreach (var total in Model.TotalDespesas)
                        {
                            <td class="red-icon">@total</td>
                        }
                        <td class="red-icon">@Model.TotalDespesas.Sum()</td>
                    </tr>
                    rowClass = (rowClass == "even-row") ? "odd-row" : "even-row";
                }
                <tr>
                    <th class="green-icon">TOTAL</th>
                    @foreach (var total in Model.TotalLucroPorMes)
                    {
                        <td class="green-icon">
                            <strong>@total</strong>
                        </td>
                
                    }
                    <td>
                        <strong>@Model.TotalLucro</strong>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div>
        <a asp-area="Admin" asp-controller="Relatorios" asp-action="Pagamentos">Voltar</a>
    </div>
</div>